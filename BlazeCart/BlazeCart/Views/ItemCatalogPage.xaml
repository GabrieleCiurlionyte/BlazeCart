<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlazeCart.Views.ItemCatalogPage"
             NavigationPage.HasNavigationBar="False"
             Title="ItemCatalogPage"
             xmlns:model="clir-namespace:BlazeCart.Model"
             >


    <ContentPage.Content
        BackgroundColor="{StaticResource PageBackgroundColor}">
        <StackLayout
            Margin="5"
            >
            <ImageButton
                Source="back_button"
                HorizontalOptions="Start" 
                ></ImageButton>

            <Label
                HorizontalTextAlignment="Start"
                Margin="10, 5, 50, 5"
                Style="{StaticResource ItemCatalogPoppinsBold}"
                Text="Category_name"
                TextColor="{StaticResource PrimaryTextColor}"></Label>

            <SearchBar Placeholder="Ieškoti prekės..."
               CancelButtonColor="{StaticResource TextColorSecondary}"
               PlaceholderColor="{StaticResource TextColorSecondary}"
               TextColor="{StaticResource TextColorSecondary}"
               HorizontalTextAlignment="Start"
               FontSize="Medium"
               FontAttributes="Italic" />


            <Grid x:Name="ItemCard" MaximumHeightRequest="200" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Border
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Stroke="{StaticResource PageBackgroundColor}"
                    StrokeShape="RoundRectangle 50"
                    
                    >

                    <Image
                Aspect="AspectFill"
                Source="banana_img"
                Margin="20"
                HorizontalOptions="Start"  
                VerticalOptions="Start"
                    />
                </Border>

                <Label
                Grid.Column="1"
                Grid.Row="0"
                HorizontalTextAlignment="Start"
                Margin="0, 0, 15, 0"
                Style="{StaticResource ItemNamePoppins}"
                Text="Name_of_product"
                TextColor="{StaticResource PrimaryTextColor}"></Label>


                <StackLayout
                    Grid.Column="1"
                    Grid.Row="1"
                    Orientation="Horizontal"
                    
                    >
                    <Label
                    HorizontalTextAlignment="Start"
                    Margin="0, 0, 1, 0"
                    Style="{StaticResource ItemNumberPricePoppins}"
                    Text="1.10"
                    TextColor="{StaticResource PrimaryTextColor}"></Label>

                    <Label
                    HorizontalTextAlignment="Start"
                    Margin="0, 0, 15, 0"
                    Style="{StaticResource ItemPricePoppins}"
                    Text=" € / vnt"></Label>

                </StackLayout>

                <StackLayout 
                    Orientation="Horizontal"   
                    Grid.Column="2"
                    Grid.Row="2" 
                    Margin="0"
                    >
                    <ImageButton
                        Source="heart_button"
                        HorizontalOptions="Start" 
                    ></ImageButton>

                    <ImageButton
                        Source="cart_button"
                        HorizontalOptions="Start" 
                    ></ImageButton>

                </StackLayout>


            </Grid>






        </StackLayout>
    </ContentPage.Content>

</ContentPage>