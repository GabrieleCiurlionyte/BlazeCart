                                    MaximumHeightRequest="150"
                                    MaximumWidthRequest="177"
                                    StrokeThickness="0.001"
                                    Padding="0"
                                    Margin="0"
                                    Background="{StaticResource White}"
                                    StrokeShape="RoundRectangle 5,5,0,0">
